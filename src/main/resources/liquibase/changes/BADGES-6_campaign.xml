<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Pavel N" id="BADGES-6 - made campaign">
        <createTable tableName="badge">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(2550)"/>
            <column name="category" type="VARCHAR(255)"/>
            <column name="image_url" type="VARCHAR(2550)"/>
            <column name="enabled" type="BOOLEAN"/>
            <column name="deleted" type="BOOLEAN"/>
            <column name="version" type="INT" defaultValue="0"/>
        </createTable>
    </changeSet>


    <changeSet author="Pavel N" id="BADGES-6 - 1 - campaign rules">
        <createTable tableName="badge_rule">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>

            <column name="badge_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_br_b"
                             referencedColumnNames="id"
                             referencedTableName="badge"/>

            </column>
            <column name="count_per_campaign" type="INT"/>
            <column name="count_to_one_user" type="INT"/>
            <column name="to_users_max" type="INT"/>
            <column name="hidden_before_end" type="BOOLEAN"/>
            <column name="hidden_always" type="BOOLEAN"/>
            <column name="show_results" type="BOOLEAN"/>
            <column name="period" type="VARCHAR(255)"/>
            <column name="start_date" type="DATE"/>
            <column name="end_date" type="DATE"/>
        </createTable>
    </changeSet>

    <!--<changeSet author="Pavel N" id="BADGES-6 - 2 - fix rule">-->
    <!--</changeSet>-->
</databaseChangeLog>