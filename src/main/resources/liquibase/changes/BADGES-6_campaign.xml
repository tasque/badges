<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet author="Pavel N" id="BADGES-6 - 1 - campaign rules">
        <createTable tableName="badge_rule">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>

            <column name="badge_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_br_b"
                             referencedColumnNames="id"
                             referencedTableName="badge"/>

            </column>
            <column name="count_per_campaign" type="INT"/>
            <column name="count_to_one_user" type="INT"/>
            <column name="to_users_max" type="INT"/>
            <column name="hidden_before_end" type="BOOLEAN"/>
            <column name="hidden_always" type="BOOLEAN"/>
            <column name="show_results" type="BOOLEAN"/>
            <column name="period" type="VARCHAR(255)"/>
            <column name="start_date" type="DATE"/>
            <column name="end_date" type="DATE"/>
        </createTable>
    </changeSet>

    <changeSet id="BADGES-6 - 1 - campaign for badge" author="Pavel N">
        <addColumn tableName="badge">
            <column name="badge_rule_id" type="BIGINT">
                <constraints nullable="true"
                             referencedTableName="badge_rule"
                             referencedColumnNames="id"
                             foreignKeyName="fk_b_br"/>
            </column>
        </addColumn>
        <sql>
            UPDATE badge AS b
            SET badge_rule_id = br.id
            FROM badge_rule AS br
            WHERE b.id = br.badge_id
        </sql>
        <dropColumn tableName="badge_rule" columnName="badge_id"/>
    </changeSet>

    <changeSet id="BADGES-6 - 2" author="Pavel N">
        <addColumn tableName="badge_rule">
            <column name="renew_period" type="BOOLEAN"/>
        </addColumn>
        <renameColumn tableName="badge_rule" oldColumnName="show_results" newColumnName="generate_results"/>
    </changeSet>

</databaseChangeLog>